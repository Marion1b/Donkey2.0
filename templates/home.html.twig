{% extends "layout.html.twig" %}

{% block header %}
{{ parent() }}
{% endblock %}

{% block main %}
<main class="home">

<h1 hidden>Page d'Accueil</h1>

<section class="home-display-names">
    <h2 hidden>Aristes programmé-e-s</h2>
    <article class="home-display-names-container">
        <h3 hidden>Noms des artistes</h3>
        <p>
            {% for artist in artists %}
                {{ artist.getName() }} {% if not loop.last %} - {% endif %}
            {% endfor %}
        </p>
        <div class="home-display-names-form1 form"><img src="./assets/img/forms/form1.png" alt=""></div>
        <div class="home-display-names-form2 form"><img src="./assets/img/forms/form2.png" alt=""></div>
        <div class="home-display-names-form3 form"><img src="./assets/img/forms/form3.png" alt=""></div>
    </article>
</section>

<section class="home-ticketing">
    <h2>Billetterie</h2>
    <p>Billets un jour,<br>
    Pass deux jours,<br>
    Pass trois jours</p>
    <a href="index.php?route=billetterie"><button>J'achète mon billet</button></a>
    <div class="home-ticketing-circle">
        <h2>Billetterie</h2>
        <p class="p1">Billets un jour</p>
        <p class="p2">Pass deux jours</p>
        <p class="p3">Pass trois jours</p>
    </div>
</section>

<section class="home-infos">
    <h2 hidden>Résumé informations pratiques</h2>
    <section class="home-infos-container">
        <h3 hidden>Cartes avec les différentes informations pratiques</h3>
        <article class="home-infos-dates">
            <h4>05, 06 et 07 juillet 2024</h4>
            <p><span class="bold">Vendredi 05 :</span> de 18h à 00h</p>
            <p><span class="bold">Samedi 06 et dimanche 07 :</span> de 14h à 00h</p>
        </article>
        <article class="homes-infos-lieu">
            <h4>Parc du Thabor, 35000 Rennes</h4>
            <p>Centre-ville | parking | bus | métro | station vélo STAR</p>
        </article>
        <article class="home-infos-medias">
            <h4>Suivez-nous</h4>
            <article class="home-infos-medias-links">
                <h5 hidden>Liens vers les réseaux sociaux</h5>
                <a href="https://www.instagram.com/"><i class="fa-brands fa-instagram"></i></a>
                <a href="https://www.tiktok.com/discover?lang=fr"><i class="fa-brands fa-tiktok"></i></a>
                <a href="https://x.com/?lang=fr"><i class="fa-brands fa-x-twitter"></i></a>
                <a href="https://www.facebook.com/?locale=fr_FR"><i class="fa-brands fa-square-facebook"></i></a>
            </article>
        </article>
    </section>
    <div class="home-infos-form1 form"><img src="./assets/img/forms/form1.png" alt=""></div>
    <div class="home-infos-form3 form"><img src="./assets/img/forms/form3.png" alt=""></div>
</section>

</main>
{% endblock %}

{% block footer %}
{{ parent() }}
{% endblock %}